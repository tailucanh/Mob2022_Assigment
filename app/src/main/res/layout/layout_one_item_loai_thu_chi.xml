<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingBottom="8dp"
    >
    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/swiper_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mode="same_level"
        app:dragEdge="right"
   >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/umg_update_loai_thuchi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_update_2"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                />
            <ImageView
                android:id="@+id/img_delete_loai_thuchi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_delete_1"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center|left"
            android:background="@drawable/custom_solid_one_item"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_cart"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"/>


            <TextView
                android:id="@+id/ten_loai_thu_chi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/akaya_telivigala"
                android:paddingHorizontal="5dp"
                android:text="Tên loại thu/chi"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>
    </com.chauthai.swipereveallayout.SwipeRevealLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/custom_background_dialog"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/andika_new_basic_bold"
        android:text="Out of time!"
        android:gravity="center"
        android:textColor="#FFEB3B"
        android:textSize="25dp" />
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="20dp"
       android:src="@drawable/sad"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="Cố gắng lên nào..."
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <Button
        android:id="@+id/bnt_lamlai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:fontFamily="@font/acme"
        android:paddingHorizontal="25dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_buton"
        android:layout_gravity="center"
        android:text="Ready !"/>





</LinearLayout>
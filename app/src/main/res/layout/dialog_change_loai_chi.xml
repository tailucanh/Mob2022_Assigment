<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:background="@drawable/custom_background_dialog_add"
    android:padding="30px"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_change_2"
        android:scaleType="centerCrop"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        />
    <View
        android:layout_width="100dp"
        android:layout_height="0.2dp"
        android:elevation="2dp"
        android:background="#c0c0c0"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_change"
            android:scaleType="centerCrop"
            android:layout_gravity="center"

            android:layout_marginRight="10dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#0A514B"
            app:hintAnimationEnabled="true"
            app:hintTextColor="#0F4943"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_loaichi_change"
                style="@style/text_input_edit_text"
                android:hint="Thay đổi loại chi"
               />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_update_loaiChi"
        style="@style/style_button_text_input"
        android:text="Update"
        />


</LinearLayout>
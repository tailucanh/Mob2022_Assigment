<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp"
    android:background="@drawable/login_custom_border"
    android:elevation="10dp"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/permanen"
        android:text="Your account "
        android:textColor="#357F83"
        android:shadowColor="#70CCD1"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:textSize="23dp"
        android:gravity="center"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:fontFamily="@font/acme"
        android:text="Username:   "
        android:textColor="#357F83"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:layout_gravity="center"
        android:fontFamily="@font/acme"
        android:textColor="#7C7979"
        android:textSize="20sp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:fontFamily="@font/acme"
            android:text="Password:   "
            android:textColor="#357F83"
            android:textSize="20sp" />
      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:passwordToggleEnabled="true"
          app:passwordToggleTint="#357F83"
          android:paddingBottom="12dp"
          android:paddingLeft="5dp"
          >
          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/pass"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="textPassword"

              android:fontFamily="@font/acme"
              android:background="@drawable/custom_edittext_info"
              android:focusable="false"
              android:textColor="#7C7979"
              android:textSize="20dp"/>
      </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <carbon.widget.Button
        android:id="@+id/signout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Sign out"
        android:layout_marginBottom="8dp"
        app:carbon_cornerRadius="15dp"
        android:fontFamily="@font/alegreya"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:background="@drawable/custom_button_info_user"
        android:textColor="#FFFFFF"/>

</LinearLayout>
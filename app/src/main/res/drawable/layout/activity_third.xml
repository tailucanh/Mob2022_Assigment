<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityFirst"
    android:orientation="vertical"
    android:background="#35888C"
    >

    <include layout="@layout/actionbar3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/goi_y"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/light"
            />

        <Chronometer
            android:id="@+id/simpleChronometer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:countDown="true"
            android:textSize="27dp"
            android:layout_marginRight="70dp"
            android:gravity="center"
            android:textColor="#FFF8F8"
            android:padding="5dp" />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#35888C"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:id="@+id/img_caudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/caudo3" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:backgroundTint="#35888C"
            >
            <ImageView
                android:id="@+id/img_a"
                android:layout_width="57dp"
                android:layout_height="50dp"
                android:src="@drawable/a3"
                android:scaleType="fitXY"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:backgroundTint="#35888C"
            >
            <ImageView
                android:id="@+id/img_b"
                android:layout_width="57dp"
                android:layout_height="50dp"
                android:src="@drawable/b3"
                android:scaleType="fitXY"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:backgroundTint="#35888C"
            >
            <ImageView
                android:id="@+id/img_c"
                android:layout_width="57dp"
                android:layout_height="50dp"
                android:src="@drawable/c3"
                android:scaleType="fitXY"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#35888C"

            >
            <ImageView
                android:id="@+id/img_d"
                android:layout_width="57dp"
                android:layout_height="50dp"
                android:src="@drawable/d3"
                android:scaleType="fitXY"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/rdg_caudo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rdo_dapanA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                 android:textSize="21dp"
                android:textStyle="bold"
                android:textColor="#FFF8F8"
                android:layout_marginRight="37dp"
                />
            <RadioButton
                android:id="@+id/rdo_dapanB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                 android:textSize="21dp"
                android:layout_marginRight="35dp"
                android:textStyle="bold"
                android:textColor="#FFF8F8"
                />
            <RadioButton
                android:id="@+id/rdo_dapanC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:layout_marginRight="20dp"
                 android:textSize="21dp"
                android:textStyle="bold"
                android:textColor="#FFF8F8"
                />
            <RadioButton
                android:id="@+id/rdo_dapanD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                 android:textSize="21dp"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                android:textColor="#FFF8F8"
                />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_kiemtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:textAllCaps="false"
                android:fontFamily="@font/acme"
                android:paddingHorizontal="25dp"
                android:textSize="20dp"
                android:background="@drawable/custom_buton"
                android:text="Kiểm tra "/>

            <Button
                android:id="@+id/btn_dauhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme"
                android:paddingHorizontal="25dp"
                android:text="Đầu hàng"
                android:textAllCaps="false"
                android:background="@drawable/custom_buton"
                android:textSize="20dp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/annie_use_your_telescope"
                android:text="@string/conten3"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold|italic" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/annie_use_your_telescope"
                android:text="– Thomas Edison."
                android:textColor="#7EE182"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_marginRight="22dp"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>




</LinearLayout>
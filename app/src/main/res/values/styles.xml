<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_tab_layout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/courgette</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#26857C</item>
    </style>

    <style name="text_nav" >
        <item name="android:fontFamily">@font/alegreya</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textColor">@color/text_color_nav</item>
    </style>
    <style name="text_input_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/background_tint_input</item>
        <item name="android:fontFamily">@font/alata</item>
        <item name="android:inputType">text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>


    <style name="style_button_text_input">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/custom_buton_dialog</item>
        <item name="android:fontFamily">@font/permanen</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="style_input_layout_dialog_add">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/permanen</item>
        <item name="android:textColorHint">@color/color_hint_input_layout</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="errorTextAppearance">@font/alata</item>
        <item name="hintTextColor">@color/color_hint_text</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/color_err_dialog</item>

    </style>

    <style name="style_fragment_gioi_thieu_img">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/rec</item>
    </style>

    <style name="style_fragment_gioi_thieu_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="style_fragment_gioi_thieu_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/aleo</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="style_fragment_gioi_thieu_button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">@font/aleo</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="style_fragment_thong_ke_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/abeezee</item>
        <item name="android:textColorHint">@color/color_tv_fra_tk</item>
        <item name="android:shadowColor">@color/shadow_color_tv_fra_tk</item>\
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="style_simpleChronometer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:countDown">true</item>
        <item name="android:textSize">27dp</item>
        <item name="android:layout_marginRight">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="style_button_game">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">23dp</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/custom_buton</item>
    </style>

    <style name="style_content_title_game">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">@font/annie_use_your_telescope</item>
        <item name="android:textColor">@color/green_2</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_content_game">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/annie_use_your_telescope</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="style_cau_do_game">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="style_dap_an_game">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">21dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_dap_an_img_game">
        <item name="android:layout_width">57dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="style_goi_y_game">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:src">@drawable/light</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="frag_tk_date_img_start">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:src">@drawable/ic_date_start</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="frag_tk_date_img_finish">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:src">@drawable/ic_date_finish</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="frag_tk_button">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="frag_tk_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_tv_fra_tk</item>
    </style>

    <style name="frag_tk_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/alatsi</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="frag_tk_content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textSize">23dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:textColor">@color/color_tv_fra_tk_2</item>
    </style>
    <style name="frag_tk_content_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textSize">23dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:textColor">@color/color_tv_fra_tk_2</item>
    </style>
    <style name="style_content_tk">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pacifico</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">120dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="style_content_tk_2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/caveat</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:textColor">@color/gray_100</item>
    </style>



</resources>